

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  <h2 class="text-center">Sign Up</h2>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
    <%= f.input :password, required: true, label: false, placeholder: "Password" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Password Confirmation" %>
 

  
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
